</div>



<!-- Team Container -->
<div class="w3-container w3-padding-64 w3-center" id="team">
<h2>OUR TEAM</h2>
<p>Meet the team - our little family:</p>

<div class="w3-row"><br>

  <% memberInfo.forEach((member)=>{ %>
    <div class="w3-quarter">
  <img src="../public/static_images/save_banner.jpg" alt="Default SAVE Background" style="width:45%" class="w3-circle w3-hover-opacity">
  <% memberData.forEach((memberData)=>{ %>
    <% if(memberData.registerEmail == member.registerEmail){ %>
      
      <h3><%= memberData.registerName %></h3>
    <% } %>
  <% }) %>
  <p><%= member.designation %></p>
</div>
  <% }) %>








</div>
</div>

<!-- Work Row -->
<div class="w3-row-padding w3-padding-64 w3-theme-l1" id="work">

<div class="w3-quarter">
<h2>Our Blog</h2>
<p>(Students Against Violence Everywhere) SAVE is a youth platform that is led by students to promote tolerance, diversity, and peace. Hajee Mohammad Danesh Science and Technology University is one of the newest Chapters of it.</p>
</div>

<!-- blog card starts here -->
 <% blog.forEach((blog)=>{ %>
  <% if(blog.category == 'our blog'){ %>
<div class="w3-quarter">
<div class="w3-card w3-white">
  <img src="<%= blog.imageAddress %>" alt="Snow" style="width:100%" class="ourBlogImage">
  <div class="w3-container">
  <h3><%= blog.blogHeading %></h3>

  <p class="blogBodyofBlogCard"><%= blog.blogBody %>
    #Stop_Communal_Violence</p>

  </div>
  </div>
</div>
  <% } %>

 <% }) %>









</div>



<!-- Our Works Row -->
<div class="w3-row-padding w3-center w3-padding-64" id="pricing">
    <h2>Our Works</h2>
    <p>Our members achievements and upcoming news.</p><br>

    <hr>
    <!-- our works card starts here -->
    <% blog.forEach((blog)=>{ %>
      <% if(blog.category == 'our work'){ %>
    <div class="w3-third w3-margin-bottom">
      <ul class="w3-ul w3-border w3-hover-shadow">
        <li class="w3-theme">
          <p class="w3-xlarge"><%= blog.blogHeading %></p>
        </li>
        <li class="w3-padding-16"><img src="<%= blog.imageAddress %>" alt="Default SAVE image" class="ourWorksImage"></li>
        <% memberData.forEach((member)=>{ %>
          <% if(member.registerEmail == blog.registerEmail){ %>
          <li class="w3-padding-16">Posted by <%= member.registerName %></li>
        <% }})%>

        <li class="w3-padding-16">Co - President, SAVE Youth HSTU Chapter</li>
        <li class="w3-padding-16">
          <%= blog.blogBody %>
        </li>
        <li class="w3-theme-l5 w3-padding-24">
          <button class="w3-button w3-teal w3-padding-large"><i class="fa fa-check"></i> Read More</button>
        </li>
      </ul>
    </div>
    <% } %>

    <% }) %>
   
    <!-- our works card ends here -->  
       
</div>

<!-- Contact Container -->
<div class="w3-container w3-padding-64 w3-theme-l5" id="contact">
  <div class="w3-row">
    <div class="w3-col m5">
    <div class="w3-padding-16"><span class="w3-xlarge w3-border-teal w3-bottombar">Contact Us</span></div>
      <h3>Address</h3>
      <p>Meet us here.</p>
      <p><i class="fa fa-map-marker w3-text-teal w3-xlarge"></i>  Hajee Mohammad Danesh Science and Technology University, Dinajpur - 5200</p>
      <p><i class="fa fa-phone w3-text-teal w3-xlarge"></i>  +8801521550852</p>
      <p><i class="fa fa-envelope-o w3-text-teal w3-xlarge"></i>  Save.hstu@gmail.com</p>
    </div>
    <div class="w3-col m7">
      <form class="w3-container w3-card-4 w3-padding-16 w3-white" action="/contactForm" method="post">
      <div class="w3-section">      
        <label>Name</label>
        <input class="w3-input" type="text" name="Name" required>
      </div>
      <div class="w3-section">      
        <label>Email</label>
        <input class="w3-input" type="text" name="Email" required>
      </div>
      <div class="w3-section">      
        <label>Message</label>
        <input class="w3-input" type="text" name="Message" required>
      </div>  
      <input class="w3-check" type="checkbox" checked name="Like">
      <label>I Like it!</label>
      <button type="submit" class="w3-button w3-right w3-theme">Send</button>
      </form>
    </div>
  </div>
</div>

