<html lang="en">
  <%- include('./partials/headDashboard.ejs') %>

<body>
  <%- include('./partials/navDashboard.ejs') %>

  
  <div class="main">
    <% errors.forEach(function(message){ %>
      <div class="alert alert-danger text-center"><%= message %></div>
    <% }) %>

    
    <h2>Hello, <%= session_data.registerName %></h2>
    <h3>Welcome, Here are the queries from Public</h3>
    
    <div id="cardholderFromAdminDashboard">
    <% formData.forEach((data)=>{ %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title">Name: <%= data.Name %></h5>
        <h6 class="card-subtitle mb-2 text-muted">Email: <%= data.Email %></h6>
        <p class="card-text">Message: <%= data.Message %></p>
        <a href="mailto:<%= data.Email %>" class="card-link"><button type="button" class="btn btn-primary">Reply via Email</button> </a>
        <a href="#" class="card-link"><button type="button" class="btn btn-primary" onclick="copyToClipBoard('<%= data.Email %>')">Copy Email</button></a>
      </div>
    </div>
    <% }) %>
    </div>


    
  </div>
<script src="../public/js/AdminDashboard.js"></script>
</body>

</html>